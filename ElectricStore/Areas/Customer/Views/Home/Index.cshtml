@model ElectricStore.Models.ViewModels.HomeVM

@{
    ViewData["Title"] = "Home Page";
}

<div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
    <ol class="carousel-indicators">
        <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
        <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
        <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
    </ol>
    <div class="carousel-inner" style="height:75vh;">
        <div class="carousel-item active">
            <img class="d-block w-100 " src="./Photos/Slider/ad839cc1-d308-4393-9c8a-65119c8c8e76.jpg" alt="First slide">
        </div>
        <div class="carousel-item">
            <img class="d-block w-100 " src="./Photos/Slider/d169e87e-a2fe-440d-9fbe-0f16795a469d.jpg" alt="Second slide">
        </div>
        <div class="carousel-item">
            <img class="d-block w-100 " src="./Photos/Slider/dd3bba9c-45c9-445f-9d0f-59de12e6ea86.jpg" alt="Third slide">
        </div>
    </div>
    <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>

<div class="container pr-3">

    <img src="~/Photos/Services.PNG" class="w-100" />

</div>
<div class="container" >
    <div class="row">
        <div class="col-5 m-4 p-3" style="background-color:whitesmoke";>
            <h1 class="p-4 text-center">New Products</h1>
            <div style="height:100px">

                @foreach (var item in Model.Product)
                {
                    <a asp-controller="Home" asp-action="Details" asp-route-id="@item.Id" >
                        <div class="row p-3 mb-1" style="border:1px solid #000000">
                            <div class="col-3">
                                <span>@item.Name</span>
                            </div>
                            <div class="col-3">
                                <span>@item.Category.Name</span>
                            </div>
                            <div class="col-3">
                                <span>@item.Price</span>
                            </div>
                            <div class="col-3">
                                <img src="@item.ImageUrl" width="80" height="80" />
                            </div>
                        </div>
                </a>
                 
                
                   }
           </div>       
        </div>
        <div class="col-5 m-4 p-3 mr-auto" style="background-color:whitesmoke" ;>
            <h1 class="p-4 text-center">Fetured  Products</h1>
            <div style="height:100px">

                @foreach (var item in Model.Product)
                {
                    <a asp-controller="Home" asp-action="Details" asp-route-id="@item.Id">
                        <div class="row p-3 mb-1" style="border:1px solid #000000">
                            <div class="col-3">
                                <span>@item.Name</span>
                            </div>
                            <div class="col-3">
                                <span>@item.Category.Name</span>
                            </div>
                            <div class="col-3">
                                <span>@item.Price</span>
                            </div>
                            <div class="col-3">
                                <img src="@item.ImageUrl" width="80" height="80" />
                            </div>
                        </div>
                    </a>
                }
            </div>
        </div>
    </div>
</div>
