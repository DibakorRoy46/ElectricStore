@using Microsoft.AspNetCore.Identity
@model ElectricStore.Models.ViewModels.RegisterVM
<h1 class="text-info">Register</h1>
<div class="row">
    <div class="col-md-6 col-sm-12">
        @if(Model.IsSuccess==true)
        {
            <div class="alert alert-success">
                <p>Your Account had been successfully registered.A email send your email account for varify your account.</p>
            </div>
            <div>
                <a class="text-decoration-none text-dark text-primary" asp-action="Login" asp-controller="Account" asp-area="Admin"> Click here for Login</a>
            </div>
        }
        <form method="post" role="form">
            <h4>Create a new account</h4>
            <hr />
            <div asp-validation-summary="All" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="Email"></label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="ApplicationUser.Name"></label>
                <input asp-for="ApplicationUser.Name" class="form-control" />
                <span asp-validation-for="ApplicationUser.Name" class="text-danger"></span>
            </div>
            @if (User.IsInRole("Admin"))
            {
                <div class="form-group">
                    <label asp-for="ApplicationUser.StreetAddress"></label>
                    <input asp-for="ApplicationUser.StreetAddress" class="form-control" />
                    <span asp-validation-for="ApplicationUser.StreetAddress" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="ApplicationUser.PostalCode"></label>
                    <input asp-for="ApplicationUser.PostalCode" class="form-control" />
                    <span asp-validation-for="ApplicationUser.PostalCode" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="ApplicationUser.City"></label>
                    <input asp-for="ApplicationUser.City" class="form-control" />
                    <span asp-validation-for="ApplicationUser.City" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="ApplicationUser.PhoneNumber"></label>
                    <input asp-for="ApplicationUser.PhoneNumber" class="form-control" />
                    <span asp-validation-for="ApplicationUser.PhoneNumber" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="RoleSelected"></label>
                    <div class="col-md-10">
                        <select asp-for="RoleSelected" id="roleBox" asp-items="@Model.RoleList" class="form-control">
                            <option disabled selected>--Select Role--</option>
                        </select>
                    </div>
                    <span asp-validation-for="RoleSelected" class="text-danger"></span>
                </div>
            }
            <div class="form-group">
                <label asp-for="Password"></label>
                <input asp-for="Password" class="form-control" type="password" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ConfirmPassword"></label>
                <input asp-for="ConfirmPassword" class="form-control" type="password" />
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>
            <div class="form-group">
                <div class="col-md-4">
                    <button type="submit" class="btn btn-success form-control">Register</button>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts{
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
        <script>
            $(window).on('load', function () {
	            $(".loader").fadeOut(1000);
	            $(".wrapper").fadeIn(1000)
            });
        </script>
}

