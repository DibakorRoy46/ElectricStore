
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
  
<span class="d-none" id="messageBox">@TempData["Message"]</span>
<span class="d-none" id="errorBox">@TempData["Error"]</span>
<br />
<div class="row">
    <div class="col-6">
        <h2 class="text-primary">Role List </h2>
    </div>
    <div class="col-6 text-right">
        <a class="btn btn-primary" asp-action="Upsert"><i class="fas fa-plus"></i> &nbsp; Create New Role</a>
    </div>
</div>

<br />
<div class="p-4 border rounded">
    <table id="tblData" class="table table-striped table-bordered" style="width:100%">
        <thead class="thead-dark">
            <tr class="table-info">
                <th>Id</th>
                <th>Name</th>
                <th></th>
            </tr>
        </thead>
    </table>
</div>

@section Scripts{
    <script src="~/js/Role.js"></script>

    <script>
        $(document).ready(function () {
            var textMessage = $("#messageBox").text();
            if (textMessage != "") {
                toastr.success(textMessage);
            }
        });
    </script>
    <script>
        $(document).ready(function () {
            var textMessage = $("#errorBox").text();
            if (textMessage != "") {
                toastr.error(textMessage);
            }
        });
    </script>

}

